# MVC-PHP-5-TEMPLATE CONFIGURATION
# ==================================

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=crudtest
DB_PORT=3306

# Application Configuration
APP_NAME=MVC-PHP-5-TEMPLATE
APP_ENV=development
APP_DEBUG=true

# Project Configuration
FOLDER_PROJECT=MVC-PHP-5-TEMPLATE

# Base URL Configuration
BASE_URL=http://192.168.1.240/MVC-PHP-5-TEMPLATE/

# Upload Configuration
UPLOAD_FOLDER=public/img/
MAX_UPLOAD_SIZE=5242880

# Session Configuration
SESSION_LIFETIME=7200
SESSION_NAME=mvc_session

# Security Configuration
APP_KEY=
HASH_ALGO=sha256
CSRF_ENABLED=true
CSRF_EXPIRE=1800
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_TIME_WINDOW=60
SECURITY_HEADERS_ENABLED=true
SESSION_REGENERATE_INTERVAL=1800

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
